@model List<EventViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tee Bor</title>
    <link rel="stylesheet" href="~/css/index.css"></link>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<body>
    <div class="container">
        <div class="event-group event-ongoing">
            <div class="header">
                <h2>Ongoing Event</h2>
                <a href="#">See more</a>
            </div>
            <div class="event-container">
                @foreach (var ev in Model)
                {
                    <div class="event event-1">
                        <a href="/eventpage/viewid/@ev.Tags">
                            <div class="event-img-container">
                                <img class="event-image" src="@ev.EventImg" alt="event-1 image">
                            </div>
                        </a>
                        <div class="content">
                            <div class="left-card">
                            <p><a href="/eventpage/viewid/@ev.Tags" class="event-name">
                                    @ev.EventName
                                </a></p>
                            <div class="host" style="color: red;">Host: @ev.HostName</div>
                            <div class="date-hide">
                                
                                <p><span class="material-symbols-outlined">calendar_month</span>Until: @ev.EndDate</p>
                            </div>

                            </div>
                            <div class="event-footer">
                                <div class="going">
                                    <span class="material-symbols-outlined">check_circle</span>
                                    <p>1 Going</p>
                                </div>
                                <div class="price">
                                    <span class="material-symbols-outlined">confirmation_number</span>
                                    <p>Free</p>
                                </div>
                            </div>
                            <div class="detail"><p>Details:</p> @ev.EventDetails</div>
                            </div>
                            <div class="right-card">
                                <div class="date">
                                <span class="material-symbols-outlined">calendar_month</span>
                                <p>Until: @ev.EndDate</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    @if (ViewData["userID"] != null){
    <a href="/event/create" class="link-create">
        <div class="div-create">Create Event</div>
    </a>
    }
</body>

</html>

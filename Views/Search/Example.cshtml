@model WebApp.Search

<form method="get" asp-action="Index" asp-controller="Search">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Place">Place:</label>
        <input asp-for="Place" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DateChoice">Date Choice:</label>
        <select asp-for="DateChoice" asp-items="@GetDateChoices()" class="form-control">
            <option value="">Any</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Type">Type:</label>
        <select asp-for="Type" asp-items="@GetEventTypes()" class="form-control">
            <option value="">Any</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Category">Category:</label>
        <select asp-for="Category" asp-items="@GetCategories()" class="form-control">
            <option value="">Any</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
</form>

@functions {
    List<SelectListItem> GetDateChoices()
    {
        return new List<SelectListItem>
        {
            new SelectListItem { Text = "Today", Value = "today" },
            new SelectListItem { Text = "This Week", Value = "this week" },
            new SelectListItem { Text = "Next Week", Value = "next week" },
        };
    }

    List<SelectListItem> GetEventTypes()
    {
        return new List<SelectListItem>
        {
            new SelectListItem { Text = "Indoor", Value = "indoor" },
            new SelectListItem { Text = "Outdoor", Value = "outdoor" },
            new SelectListItem { Text = "Online", Value = "online" },
        };
    }

    List<SelectListItem> GetCategories()
    {
        return new List<SelectListItem>
        {
            new SelectListItem { Text = "Art", Value = "art" },
            new SelectListItem { Text = "Game", Value = "game" },
            new SelectListItem { Text = "Dancing", Value = "dancing" },
        };
    }
}



<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <link rel="stylesheet" href="/style/EventPage.css" />
  <body>
    <nav>
      <li><a class="active" href="#home">Home</a></li>
      <li><a href="#news">News</a></li>
      <li><a href="#contact">Contact</a></li>
      <li><a href="#about">About</a></li>
    </nav>
    <div class="header">
      <h1 id="event-name">@event.eventname</h1>
      <div>
        <img 
        id="host-img" 
        src={event.hostimg}
        />
        <section>
          <div>Hosted By</div>
          <h4 id="host-name">@event.hostname</h4>
        </section>
      </div>
    </div>
    <div class="content">
      <div>
        <img
          id="event-img"
          src={@event.img}
        />
        <h2>Details</h2>
        <div id="content-details">@{}</div>
        <section id="tag">
          @foreach (var tag in event.tags)
          {
            <a href="" class="tag">${tag}</a>
          }
        </section>
        <section id="attendees">
          <h2 id="num-attendees">Attendees</h2>
          <section id="attendees-list">
            <section class="attendee-profile">
            <img
            src="@host_img"
            alt=""
            />
            <div>@event.hostname</div>
            <div>Host</div>
            </section>
            @foreach (var attendee in event.attendees)
            {
            <section class="attendee-profile">
            <img
            src="https://secure-content.meetupstatic.com/images/classic-member/311160299/45x45.jpg"
            alt=""
            />
            <div>${data['host-name']}</div>
            <div>Host</div>
            </section>
            }
          </section>
        </section>
      </div>
      <section id="details">
        <section id="time-details">
          <img src="/src/clock-icon-2048x2048-o0dud9zx.png" alt="" />
          <h3 id="time">@event.time</h3>
        </section>
        <section id="time-details">
          <img src="/src/place.png" alt="" />
          <h3 id="place">@event.place</h3>
        </section>
        <iframe
          id="map"
          width="100%"
          style="border: 0"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          src="@event.map_url"
        ></iframe>
      </section>
    </div>
    <div id="attend-line">
    @if(event.attendees.includes(data['host-name']))
    {
      <button id="cancel-attend">Cancel Attend</button>
    }
    else
    {
      <button id="attend-btn">Attend</button>
    }
    </div>
    <section id="attend">
      <section id="attend-details">
        <div id="short-time"></div>
        <h3 id="short-details"></h3>
      </section>
      <div>
        <button id="share">
          Share<img
            style="margin-left: 5px; width: 15px; height: 15px"
            src="/src/share.png"
          />
        </button>
        <button id="attend-btn">Attend</button>
      </div>
    </section>
    <footer class="dark-footer">
      <div class="container">
        <p>This is the footer content.</p>
      </div>
    </footer>
    <script src="/script/EventPage.js"></script>
  </body>
</html>

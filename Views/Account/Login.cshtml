@{
    ViewData["title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/login.css" type="text/css" />
    <title>Login</title>
</head>

<body>
    <div class="login container">
        <h1 class="login title">Login</h1>

        <form action="#" method="post">
            <div class="login input-group">
                <label for="Email">Email</label>
                <input type="email" id="Email" name="Email" maxlength="50" required>
            </div>

            <div class="login input-group">
                <label for="PasswordHash">Password</label>
                <input type="password" id="PasswordHash" name="PasswordHash" maxlength="100" required>
            </div>

            <p style="color: red;">@ViewData["error"]</p>

            <button type="submit">Log in</button>
        </form>
        <p class="login Already a Member?">Not a member yet?
            <a asp-controller="Account" asp-action="Signup">Sign Up</a>
        </p>


        <p class="login options">
            or
        </p>

        <div class="login social-login">
            <a href="#" class="login facebook-login">Log in with Facebook</a>
            <a href="#" class="login google-login">Log in with Google</a>
            <a href="#" class="login apple-login">Log in with Apple</a>
        </div>

        <p class="login forgot-password">
            <a href="#">Forgot password?</a>
        </p>
    </div>
</body>

</html>